{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/types/**/*", "*.d.ts","src/utils/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/main/*"],
      "@appTypes/*": ["src/types/*"],
      "@appUtils": ["src/utils"],
    }
  }
}
